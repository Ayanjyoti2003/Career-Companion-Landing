generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?

  // NextAuth Relations
  accounts Account[]
  sessions Session[]

  // Profile completion flag
  hasCompletedProfile Boolean @default(false)

  // Custom Relations
  profile   Profile?
  academics Academic[]
  documents Document[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  dob         DateTime?
  phone       String?
  gender      String?
  address     String?
  city        String?
  state       String?
  nationality String?

  skills      String?
  interests   String?
  careerGoals String?

  updatedAt DateTime @updatedAt
}

model Academic {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  level        String
  school       String?
  board        String?
  course       String?
  branch       String?
  passingYear  Int?
  marks        String?
  marksheetUrl String?

  createdAt DateTime @default(now())

  @@unique([userId, level])
}

model Document {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  type String
  url  String

  createdAt DateTime @default(now())
}

model Account {
  id                 Int     @id @default(autoincrement())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @map("refresh_token")
  access_token       String? @map("access_token")
  expires_at         Int?    @map("expires_at")
  token_type         String? @map("token_type")
  scope              String?
  id_token           String? @map("id_token")
  session_state      String?
  oauth_token_secret String? @map("oauth_token_secret")
  oauth_token        String? @map("oauth_token")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
